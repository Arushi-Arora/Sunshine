<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivWeatherType"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        app:srcCompat="@drawable/cloud" />

    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/ivWeatherType"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/ivWeatherType"
        android:layout_toRightOf="@+id/ivWeatherType"
        android:text="Today, 17 October" />

    <TextView
        android:id="@+id/tvWeatherDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivWeatherType"
        android:layout_alignLeft="@+id/tvDate"
        android:layout_alignStart="@+id/tvDate"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvWeatherLow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignBottom="@+id/tvWeatherDescription"
        android:layout_marginLeft="22dp"
        android:layout_marginStart="22dp"
        android:layout_toRightOf="@+id/tvDate"
        android:text="19 \u2103" />


    <TextView
        android:id="@+id/tvWeatherHigh"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="-10 \u2103"
        android:layout_alignBaseline="@+id/tvWeatherLow"
        android:layout_alignBottom="@+id/tvWeatherLow"
        android:layout_toRightOf="@+id/tvWeatherLow"
        android:layout_toEndOf="@+id/tvWeatherLow"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp" />
</RelativeLayout>